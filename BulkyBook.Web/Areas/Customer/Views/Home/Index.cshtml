@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@model IEnumerable<Product>


<section class="mt-0">

    <partial name="_Slider" />

    <div class="container">
        <div class="row justify-content-center">

            <H1 class="text-center mb-5 text-primary" style="text-transform: uppercase;">produectS</H1>

            @foreach (var item in Model)
            {
                <div class="col-lg-3 p-1 col-md-6 col-6 mb-3">
                    <div class="card h-100">
                        <!-- Product image-->
                        <a asp-action="Details" asp-route-ProductId="@item.Id"><img class="card-img-top" src="~/@item.Img" alt="..." width="450" height="300" /></a>
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@item.Name</h5>
                                <!-- Product price-->
                                $@item.Price
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <a asp-action="Details" asp-route-ProductId="@item.Id" class="btn btn-outline-dark mt-auto">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>


        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

                @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page = page }),
                         new PagedListRenderOptions
                {
                    LiElementClasses = new string[] { "page-item" },
                    PageClasses = new string[] { "page-link" }
                })
            </div>
        </div>


    </div>

    <partial name="_Slider_2" />
</section>
